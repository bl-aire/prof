---
import { Image } from "astro:assets";

//@: Assets

//@: Components
import Badge from "@components/shared/Badge.astro";
import Button from "@components/shared/Button.astro";
---

<section class="impact">
    <div class="impact__content">
        <div class="impact__content__stack">
            <Badge>Impact</Badge>
            <h1>Building Systems That Last</h1>
            <p>
                My work emphasizes institution-building rather than individual
                projects. By strengthening universities, research networks,
                boards, and community organisations, I focus on creating systems
                that continue to deliver results beyond any single grant or
                role.
            </p>
            <h2>Leadership & Contribution</h2>
            <div class="impact__content__stack__group">
                <div class="impact__content__stack__group__item">
                    <h3>8+</h3>
                    <p>Leadership Roles</p>
                </div>
                <div class="impact__content__stack__group__item">
                    <h3>3</h3>
                    <p>Boards Served</p>
                </div>
                <div class="impact__content__stack__group__item">
                    <h3>1</h3>
                    <p>Continental Network Co-founded</p>
                </div>
                <div class="impact__content__stack__group__item">
                    <h3>200+</h3>
                    <p>Students & Researchers Mentored</p>
                </div>
                <div class="impact__content__stack__group__item">
                    <h3>10+</h3>
                    <p>Grants Led</p>
                </div>
                <div class="impact__content__stack__group__item">
                    <h3>1</h3>
                    <p>Community Organisation Supported</p>
                </div>
            </div>
            <h2>
                Results Enabled Through Institutions & Programs
            </h2>
            <div class="impact__content__stack__group">
                <div class="impact__content__stack__group__item">
                    <h3>20,000+</h3>
                    <p>Youth & SMEs Supported</p>
                </div>
                <div class="impact__content__stack__group__item">
                    <h3>80+</h3>
                    <p>Researchers in Network</p>
                </div>
                <div class="impact__content__stack__group__item">
                    <h3>10+</h3>
                    <p>PhD Graduates</p>
                </div>
                <div class="impact__content__stack__group__item">
                    <h3>300+</h3>
                    <p>Vulnerable Children & Elderly Reached</p>
                </div>
                <div class="impact__content__stack__group__item">
                    <h3>60+</h3>
                    <p>Publications</p>
                </div>
                <div class="impact__content__stack__group__item">
                    <h3>50+</h3>
                    <p>Impactful Partnerships</p>
                </div>
            </div>
            
            
        </div>
    </div>
</section>

<style lang="scss" scoped>
    @use "@styles/abstracts/variables.scss" as *;
    @use "@styles/abstracts/mixins.scss" as *;
    @use "@styles/abstracts/functions.scss" as *;

    .impact {
        background-color: $color-black;
        color: $color-white;

        @media screen and (max-width: $breakpoint-sm) {
            @include d-flex-column;
        }

        &__content {
            @include d-flex-column-center;
            padding: rem(200) $base-spacing;

            @media screen and (max-width: $breakpoint-xl) {
                padding: calc($base-spacing - rem(96));
                margin: rem(64) 0 0;
            }

            @media screen and (max-width: $breakpoint-md) {
                gap: rem(96);
            }

            @media screen and (max-width: $breakpoint-sm) {
                //@include d-flex-column;
                gap: rem(80);
            }

            @media screen and (max-width: $breakpoint-xs) {
                padding: rem(160) rem(32);
                gap: rem(96);
            }

            &__stack {
                @include d-flex-column-center;
                //width: min(rem(1800), 100%);
                width: 100%;
                gap: rem(32);
                text-align: center;

                h1 {
                    margin-top: rem(50);
                    font-size: rem(60);
                    font-weight: 500;
                }
                p {
                    font-weight: 300;
                    font-size: rem(32);
                    line-height: 3ch;
                }
                h2 {
                    margin: rem(50) auto;

                }

                &__group {
                    @include d-flex;
                    gap: rem(32);
                    margin: rem(50) auto;

                    

                    @media screen and (max-width: $breakpoint-sm) {
                        @include d-flex-column;
                        align-items: center;
                        // gap: rem(64);
                    }

                    h3{
                        font-size: rem(48);
                        color:$color-primary-2;
                    }

                    &__item{
                        &:hover{
                            scale:1.05;
                        }
                    }
                }
            }

            
        }
    }
</style>
