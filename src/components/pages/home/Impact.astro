---
//@: Assets

//@: Components
import Badge from "@components/shared/Badge.astro";
---

<section class="impact" id="impact">
    <div class="impact__content">
        <div class="impact__content__stack">
            <Badge>Impact</Badge>
            <h1>Building Systems That Last</h1>
            <p>
                My work emphasizes institution-building rather than individual
                projects. By strengthening universities, research networks,
                boards, and community organisations, I focus on creating systems
                that continue to deliver results beyond any single grant or
                role.
            </p>
            <h2>Leadership & Contribution</h2>
            <div class="impact__content__stack__group">
                <div class="impact__content__stack__group__item">
                    <h3>8+</h3>
                    <p>Leadership Roles</p>
                </div>
                <div class="impact__content__stack__group__item">
                    <h3>3</h3>
                    <p>Boards Served</p>
                </div>
                <div class="impact__content__stack__group__item">
                    <h3>1</h3>
                    <p>Continental <br />Network Co-founded</p>
                </div>
                <div class="impact__content__stack__group__item">
                    <h3>200+</h3>
                    <p>Students & <br />Researchers Mentored</p>
                </div>
                <div class="impact__content__stack__group__item">
                    <h3>10+</h3>
                    <p>Grants Led</p>
                </div>
                <div class="impact__content__stack__group__item">
                    <h3>1</h3>
                    <p>Community Org.<br /> Supported</p>
                </div>
            </div>
            <h2>Results Enabled Through Institutions & Programs</h2>
            <div class="impact__content__stack__group">
                <div class="impact__content__stack__group__item">
                    <h3>20k+</h3>
                    <p>Youth & <br /> SMEs Supported</p>
                </div>
                <div class="impact__content__stack__group__item">
                    <h3>80+</h3>
                    <p>Researchers in <br />Network</p>
                </div>
                <div class="impact__content__stack__group__item">
                    <h3>10+</h3>
                    <p>PhD Graduates</p>
                </div>
                <div class="impact__content__stack__group__item">
                    <h3>300+</h3>
                    <p>Vulnerable Children/<br />Elderly Reached</p>
                </div>
                <div class="impact__content__stack__group__item">
                    <h3>60+</h3>
                    <p>Publications</p>
                </div>
                <div class="impact__content__stack__group__item">
                    <h3>50+</h3>
                    <p>Impactful<br /> Partnerships</p>
                </div>
            </div>
        </div>
    </div>
</section>

<style lang="scss" scoped>
    @use "@styles/abstracts/variables.scss" as *;
    @use "@styles/abstracts/mixins.scss" as *;
    @use "@styles/abstracts/functions.scss" as *;

    .impact {
        background-color: $color-dark-blue;
        color: $color-white;
        scroll-margin-top: 80px;

        @media screen and (max-width: $breakpoint-sm) {
            @include d-flex-column;
        }

        &__content {
            @include d-flex-column-center;
            padding: rem(200) $base-spacing;

            @media screen and (max-width: $breakpoint-xl) {
                padding: calc($base-spacing - rem(96));
                margin: rem(64) 0 0;
            }

            @media screen and (max-width: $breakpoint-md) {
                gap: rem(96);
            }

            @media screen and (max-width: $breakpoint-sm) {
                gap: rem(80);
            }

            @media screen and (max-width: $breakpoint-xs) {
                padding: rem(160) rem(32);
                gap: rem(96);
            }

            &__stack {
                @include d-flex-column-center;
                width:min(rem(1500), 100%);
                gap: rem(32);
                text-align: center;

                h1 {
                    margin-top: rem(50);
                    font-size: rem(60);
                    font-weight: 500;
                    font-family: "Bricolage Grotesque", sans-serif;
                    word-spacing: -2px;
                    letter-spacing: -1px;
                }

                p {
                    font-weight: 300;
                    font-size: rem(24);
                    line-height: 3ch;

                }

                h2 {
                    margin: rem(50) auto;
                    font-family: "Bricolage Grotesque", sans-serif;
                    word-spacing: -2px;
                    letter-spacing: -1px;
                }

                &__group {
                    @include d-flex-between;
                    gap: rem(32);
                    width: min(rem(1500), 100%);
                    margin: rem(50) auto;
                    
                    @media screen and (max-width: $breakpoint-sm) {
                        @include d-flex-column;
                        align-items: center;
                    }

                    h3 {
                        font-size: rem(64);
                        color: $color-light-blue;
                        font-family: "Bricolage Grotesque", sans-serif;
                        word-spacing: -2px;
                        letter-spacing: -1px;
                    }

                    p {
                        font-size: rem(24);
                        line-height: 2.5ch;
                    }

                    &__item {
                        width: min(rem(300), 100%);
                        background: rgba(255, 255, 255, 0.1);
                        border-radius: rem(12);
                        box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
                        backdrop-filter: blur(7.9px);
                        -webkit-backdrop-filter: blur(7.9px);
                        border: 1px solid rgba(255, 255, 255, 0.37);
                        display: flex;
                        flex-direction: column;
                        align-items: center;
                        justify-content: center;
                        padding: rem(20) rem(10);
                        transition: all 0.2s ease;

                        &:hover {
                            scale: 1.05;
                        }
                    }
                }
            }
        }
    }
</style>
