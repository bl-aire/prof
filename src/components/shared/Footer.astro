    </div>
    <div class="footer__footer">
        <p>Â© 2026 Prof. Amos Gitau Njuguna. All rights reserved.</p>
        <p>Transforming education and evidence into lasting impact.</p>
    </div>
</section>

<style lang="scss" scoped>
    @use "@styles/abstracts/variables.scss" as *;
    @use "@styles/abstracts/mixins.scss" as *;
    @use "@styles/abstracts/functions.scss" as *;

    .footer {
        background-color: $color-primary;
        color: $color-white;
        scroll-margin-top: 80px;

        @media screen and (max-width: $breakpoint-sm) {
            @include d-flex-column;
        }

        &__content {
            @include d-flex-column-center;
            padding: rem(200) $base-spacing;

            @media screen and (max-width: $breakpoint-xl) {
                padding: calc($base-spacing - rem(96));
                margin: rem(64) 0 0;
            }

            @media screen and (max-width: $breakpoint-md) {
                gap: rem(96);
            }

            @media screen and (max-width: $breakpoint-sm) {
                gap: rem(80);
            }

            @media screen and (max-width: $breakpoint-xs) {
                padding: rem(160) rem(32);
                gap: rem(96);
            }

            &__stack {
                @include d-flex-column-center;
                width: min(rem(1600), 100%);
                gap: rem(32);
                text-align: center;

                h1 {
                    margin-top: rem(50);
                    font-size: rem(60);
                    font-weight: 500;
                    font-family: "Bricolage Grotesque", sans-serif;
                    word-spacing: -2px;
                    letter-spacing: -1px;
                }

                h2, h3{
                    font-family: "Bricolage Grotesque", sans-serif;
                }

                p {
                    font-weight: 300;
                    font-size: rem(24);
                    line-height: 3ch;
                }
                h4 {
                    font-weight: 300;
                    font-family: "Bricolage Grotesque", sans-serif;
                    
                }

                &__group {
                    @include d-flex;
                    gap: rem(32);
                    margin: rem(50) auto 0;

                    @media screen and (max-width: $breakpoint-sm) {
                        @include d-flex-column;
                        align-items: center;
                    }
                }
            }

            &__container {
                @include d-flex;
                gap: rem(32);
                margin: rem(80) auto;

                @media screen and (max-width: $breakpoint-md) {
                    @include d-flex-column;
                    align-items: center;
                    gap: rem(64);
                    margin-top: rem(50);
                }
            }
        }

        &__footer {
            @include d-flex-between;
            gap: rem(32);
            border-top: 1px solid $color-gray;
            padding: rem(50) rem(32);

            @media screen and (max-width: $breakpoint-md) {
                @include d-flex-column;
                align-items: center;
                gap: rem(32);
                margin-top: rem(50);
            }
        }
    }
</style>
